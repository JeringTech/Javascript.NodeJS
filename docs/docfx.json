{
    "build": {
        "content": [
            {
                "src": "src/content",
                "files": [ "**" ],
                "exclude": [ "**/*-ignore.md" ]
            }
        ],
        "resource": [
            {
                "src": "src/resources",
                "files": [ "**" ],
                "dest": "resources"
            },
            {
                "src": "src/rootResources",
                "files": [ "**" ]
            },
            {
                "src": "src/fonts",
                "files": [ "**" ],
                "dest": "resources"
            }
        ],
        "globalMetadata": {
            "mimo_websiteName": "Jering.Javascript.NodeJS",
            "mimo_authors": [
                {
                    "name": "JeremyTCD",
                    "link": "https://github.com/JeremyTCD",
                    "imgSrc": "/resources/head_shot.jpg"
                }
            ],

            "mimo_baseUrl": "https://www.jering.tech/utilities/javascript.nodejs/",

            "mimo_socialMediaCards": "true",
            "mimo_fbCardImageRelPath": "resources/logo_wide.png",
            "mimo_twitterCardImageRelPath": "resources/logo_wide.png",
            "mimo_twitterCardType": "summary_large_image",
            "mimo_twitterCardSite": "@JeringTech",
            "mimo_twitterCardCreator": "@JeremyTCD",
            "mimo_twitterCardImageAlt": "Jering Logo",

            "mimo_copyrightText": "2017-2018 Jering",
            "mimo_disableComments": true,
            "mimo_googleTrackingID": "UA-111443979-2",

            "mimo_githubLink": "https://github.com/JeringTech/Javascript.NodeJS",
            "mimo_twitterLink": "https://twitter.com/JeringTech",

            "mimo_licensesRelPath": "/licenses",
            "mimo_privacyPolicyRelPath": "/privacy-policy",
            "mimo_contactRelPath": "/contact",
            "mimo_logoRelPath": "/resources/logo.svg",
            "mimo_faviconRelPath": "/favicon.ico",
            "mimo_headElements": [
                "<link rel=\"preload\" href=\"/resources/open-sans-v15-latin-regular.woff2\" as=\"font\" type=\"font/woff2\" crossorigin>",
                "<link rel=\"preload\" href=\"/resources/open-sans-v15-latin-italic.woff2\" as=\"font\" type=\"font/woff2\" crossorigin>",
                "<link rel=\"preload\" href=\"/resources/open-sans-v15-latin-600.woff2\" as=\"font\" type=\"font/woff2\" crossorigin>",
                "<link rel=\"preload\" href=\"/resources/droid-sans-mono-latin-400.woff2\" as=\"font\" type=\"font/woff2\" crossorigin>"
            ],

            "mimo_addressBarColor": "#1565C0"
        },
        "postProcessors": [ "SortedArticleListGenerator", "ExternalAnchorFixer", "SearchIndexGenerator", "OutlineGenerator", "TocEmbedder", "AbsolutePathResolver" ],
        "markdownEngineName": "mimo-markdown",
        "sitemap": {
            "baseUrl": "https://www.jering.tech/utilities/javascript.nodejs",
            "priority": 0.1,
            "fileOptions": {
                "**/src/content/index.md": {
                    "priority": 1.0
                },
                "**/src/content/tutorials/**/*.md": {
                    "priority": 1.0
                }
            }
        }
    }
}